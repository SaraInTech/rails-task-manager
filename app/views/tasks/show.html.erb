<div>
  <%= link_to "Edit Task", edit_task_path %>
</div>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<ul>
  <% if @task.completed == true %>
    <li><%= 'This task is completed' %></li>
  <% else  %>
    <li><%= 'This task is not completed yet' %></li>
  <% end %>
</ul>

<div>
  <%= link_to "Back to list", index_path %>
</div>
